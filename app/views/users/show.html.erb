<div class="col-md-3">
	<h1><%= @user.name %></h1>
	<br />
	<p><%= link_to "Edit", edit_user_registration_path(current_user), class:"btn btn-primary"%></p>
</div>
<div class="col-md-9">
	<h3>Reviews</h3>
	<% @user.reviews.each do |review| %>
			<h4><%= "#{review.title} (rating: #{review.rating})" %></h4>
			<p><%= review.body %></p>
	<% end %>
</div>
