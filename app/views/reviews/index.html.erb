<h1>Reviews</h1>
<% @reviews.each do |review| %>
	<h2><%= review.title %> (<%= review.rating %>)</h2>
	<p><%= review.body %></p>
	<p>Posted by <%= link_to review.user.name, review.user %> on <%= link_to review.gsi.name, review.gsi %></p>
    <p><%=review.likes%> likes <%=review.dislikes%> dislikes</p>
    <%= link_to "like", increase_review_path(review.id) %>
    <%= link_to "dislike", decrease_review_path(review.id) %>
	<%= link_to "edit", edit_review_path(review.id) %>
	<%= link_to "Delete", review, :confirm => "Are you sure?", :method => :delete %>
<% end %>
